$(document).ready(function(){
var d = document.getElementById('whatweget');
var p = document.getElementById('whatwegetparent');
p.appendChild(d); 
}); 
</script>

<style>
.whatwegetparent .whatweget {
    display: block!important;
}
</style>

{% endif %}
{% endfor %}



